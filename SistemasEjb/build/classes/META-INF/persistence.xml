<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="SistemasEjb" transaction-type="JTA">
		<jta-data-source>java:/MySQLdemo</jta-data-source>
	
		<class>sistemas.ejb.entity.Categoria</class>
		<class>sistemas.ejb.entity.Persona</class>
		<class>sistemas.ejb.entity.Nota</class>
		<class>sistemas.ejb.entity.Telefono</class>
		<class>sistemas.ejb.entity.Usuario</class>
		<class>sistemas.ejb.entity.Menu</class>
		<class>sistemas.ejb.entity.Menuoption</class>
		
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
		</properties>
	</persistence-unit>
</persistence>
